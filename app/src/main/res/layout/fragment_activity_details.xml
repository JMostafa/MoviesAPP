<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="com.moviapp.mostafa.moviapp.ActivityDetailsFragment"
    tools:showIn="@layout/activity_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/detail_Poster"
                android:layout_gravity="left|top"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/detail_Title"
                android:layout_gravity="top|right"
                android:autoText="false"
                android:textColor="#bd5555"
                android:textSize="25dp"
                android:textIsSelectable="false"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="181dp"
                android:layout_height="46dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:layout_gravity="right"
                android:id="@+id/detail_Dtae" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_Rate"
                android:numStars="5"
                android:stepSize="0.2"
                />

            <CheckBox
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:text="Favorite "
                android:layout_gravity="right"
                android:id="@+id/detail_Favorite" />

        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Over View"
                android:scrollbars="vertical"
                android:id="@+id/textView2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/detail_OverView"
            android:scrollbars="vertical"
            android:layout_gravity="left|bottom"
            android:background="#ede9e8"
            android:editable="false" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_Reviews"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView_reviews"
            android:background="#ede9e9">

        </ListView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_Viduos" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:id="@+id/listView_videos"
            />
    </LinearLayout>
    </ScrollView><![CDATA[









    >



]]>
</FrameLayout>
